<% include partials/header %>

<div class="ui main text container segment">
  <div class="ui huge inverted header">New Post</div>
  <form action="/blogs" method="POST" class="ui form focus">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" placeholder="Title" required>
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="blog[image]" placeholder="Image Path" required>
    </div>
    <div class="field">
      <label>Blog Content</label>
      <textarea name="blog[body]"></textarea>
    </div>
    <input class="ui inverted primary button huge" type="submit" name="submitBtn">
  </form>
</div>

<% include partials/footer %>